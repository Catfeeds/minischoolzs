  width:335rpx;
  height: 160rpx;
}


.loginbox{
    position: relative;
    position: absolute;
    top: 100%;
    z-index: 100;
    transition: top .8s;
    width: 100%;
    height: 100%;
    background: #fff;
}

.animate{
    top: 0;
}
.loginbox .back{
    position: absolute;
    top: 20rpx;
    left: 30rpx;
    font-size: 35rpx;
    color: #666;
}

