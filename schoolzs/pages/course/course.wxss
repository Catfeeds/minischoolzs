/**app.wxss**/
.pageContainer {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
} 
.flex{
  display: flex;
}
.flex-wrap{
  flex-wrap: wrap;
}
.flex-col{
  flex-direction: column;
}

/*head   search*/
.pageContainer .search{
  position: absolute;
  top: 0;
  z-index: 10;
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
}
.pageContainer .search-left{
  flex: 15;
  background: #fff;
  height: 60rpx;
  border-radius: 10rpx;
  text-align: left;
  box-shadow: 0 0 1px #ccc;
}
.pageContainer .seach-box{
  width: 60rpx;
  height: 60rpx;
  box-sizing: border-box;
  float: left;
  border-radius: 50%;
  padding: 20rpx;
}
.seach-box view{
  width: 100%;
  height: 100%;
  border: 1px solid #999;
  border-radius: 50%;
  position: relative;
}
.seach-box view:after{
  content:"";
  position:absolute;
  width:9rpx;
  height:4rpx;
  background:#999;
  right:-5rpx;
  bottom:-1rpx;
  transform:rotate( 38deg );
}

.pageContainer .search-left input{
  display: inline-block;
  height: 60rpx;
  color:#000;
  font-size: 26rpx;
}
.search-placeholder{
  color: #FFF;
  line-height: 26rpx;
  padding-top: 5rpx;
}
.pageContainer .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.pageContainer .search .search-right{
  flex: 2;
  margin-left:20rpx;
}
.pageContainer .search .search-right image{
  width: 43rpx;
  height: 30rpx;
  padding: 15rpx;
}
/*ad*/
.ad ,.course-grp-item{
  width:700rpx;
  margin:20rpx 0;
  flex-wrap:wrap;
  justify-content:space-between;
}
.ad navigator:first-child image{
