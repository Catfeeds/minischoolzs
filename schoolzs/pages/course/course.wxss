/* pages/course/course.wxss */
page{
    width: 100%;
    height: 100%;
    overflow: hidden;
    box-sizing: border-box;
}
.course{
    display: flex;
    flex-direction: column;
    font-family:"微软雅黑";
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: rgba(217,217,217,0.3);
}
/*left*/
.main{
    flex:1;
    width: 100%;
    display: flex;
}
.courses-left{
    flex: 1;
    overflow: hidden
}
.courses-left view{
    width:100%;
    display: block;
    line-height: 80rpx;
    font-size: 26rpx;
    color: #777;
    padding-left: 8rpx;
    text-align: center;
}
.courses-left text{
    width: 100%;
    display: block;
    padding: 15rpx 0;
    font-size:28rpx;

}
.courses-left .active{
    background-size: 8rpx 80rpx;
}
.active text{
    background: #fff;
}
/*right*/
.courses-right{
    flex: 3;
    background: #fff;
    overflow: hidden;
    padding-top: 20rpx;
}
.courses-right scroll-view{
    width: 93%;
    height: 100%;
    padding: 0 20rpx;
}
